<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="c">
	
	<!-- 회원별 장바구니 목록 조회 -->
	<select id="cart_list"
		    parameterType="int"
		    resultType="cart">
	
		select * from cart_view where m_idx = #{m_idx}
	
	</select>
	
	<!-- 회원별 장바구니 상품들의 총 계 -->
	<select id="cart_total_amount"
		    parameterType="int"
		    resultType="int">
	
		<!-- 장바구니에 상품이 한개도 없어서 amount가 0개라면 결과가 null로 넘어온다
		     현재 resultType이 int로 되어있기 때문에 null값이 반환되면 오류발생.
		     그러므로 nvl(null value)를 사용하여 결과가 null인 경우
		     값을 0으로 처리하도록 한다 -->
		select nvl( sum(amount), 0 )
		from cart_view
		where m_idx = #{m_idx}
	
	</select>
	
	<!-- 장바구니 상품의 수량변경 -->
	<update id="cart_cnt_upd"
		    parameterType="cart">
	
		update cart set c_cnt=#{c_cnt}
		where c_idx = #{c_idx}
	
	</update>
	
	<!-- 장바구니에서 상품 삭제 -->
	<delete id="cart_delete"
		    parameterType="int">
		delete from cart where c_idx=#{c_idx}
	</delete>
	
	<!-- 이미 장바구니에 있는 항목인지 조회 -->
	<select id="cart_one"
		    parameterType="cart"
		    resultType="cart">
	
		select * from cart
		where m_idx=#{m_idx} and idx=#{idx}
	
	</select>
	
	<!-- 장바구니에 상품 담기 -->
	<insert id="cart_insert" parameterType="cart">
		insert into cart values( 
			seq_cart_idx.nextVal, 1, #{idx}, #{m_idx} )
	</insert>
</mapper>












